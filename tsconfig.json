{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@devvit/public-api"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
